@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link mx-4 btn" style="color: #fed136" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="btn btn-primary btn-md text-uppercase">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item navbar-nav navbar-righ tab-content ">
            <a class="nav-link btn btn-primary btn-md text-uppercase text-dark mx-2" asp-area="Identity" asp-page="/Account/Login">Login</a>
            <a class="nav-link btn btn-primary btn-md text-uppercase text-dark mx-2" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
    }
</ul>
