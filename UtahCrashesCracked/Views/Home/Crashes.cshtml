@{
    ViewData["Title"] = "Crashes Summary";
}

@using UtahCrashesCracked.Models.ViewModels

@model CrashesViewModel

<div page-model="@Model.PageInfo" page-action="Crashes" page-class="btn"
        page-class-normal="btn-outline-dark" page-class-selected="btn-primary" page-classes-enabled="true"
        class="btn-group pull-right m-1" style="color:lightcoral">
</div>

<div class="m-4">

    <table class="table table-striped table-bordered">

        <thead>
            <tr>
                <th>Date:</th>
                <th>County:</th>
                <th>City:</th>
                <th>Route:</th>
                <th>Severity:</th>
            </tr>
        </thead>

        <tbody>
            @foreach (Crash c in Model.Crashes)
            {
                <partial name="CrashSummary" model="c" />
            }
        </tbody>

    </table>

</div>

</row>
