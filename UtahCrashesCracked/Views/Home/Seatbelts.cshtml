        </div>

        <div class="form-group">
            <label asp-for="single_vehicle">single_vehicle</label>
            <input asp-for="single_vehicle" class="form-control" value=0 />
        </div>
        <div class="form-group">
            <label asp-for="roadway_departure">roadway_departure</label>
            <input asp-for="roadway_departure" class="form-control" value=0 />
        </div>

        <br />
        <div>
            <input class="btn btn-primary" type="submit" value="Submit Appointment" />
            @*<a class="btn btn-outline-secondary" asp-controller="Inference" asp-action="Score">Cancel</a>*@
        </div>
    </form>

    <p>@ViewBag.results</p >
</body>

