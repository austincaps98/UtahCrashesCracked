<body id="page-top">
    <header class="mastheadseatbelt background-image">
    </header>

    <h1>Why are seatbelts important?</h1>

    @model InputData

    <form method="post" asp-controller="Home" asp-action="Score">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="pedestrian_involved">pedestrian_involved</label>
            <input asp-for="pedestrian_involved" class="form-control" value=0 />
